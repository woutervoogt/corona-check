<script>

window.addEventListener("scroll", myScroll);
var scrollingBool = false;
var myDown = "scroll_2";
var myUp = "scroll_1";
var scrollPosition = 0;
var scrollPositionBool = false;
var scrollDirection = "down";
var destinationID = "scroll_2";

function getDestination(){
    if (scrollDirection === "up"){
        destinationID = myUp;
    }
    else{
        destinationID = myDown;
    }
}

function changeDestinations(myDest){
    if (myDest === "scroll_1"){
        myUp = "scroll_1";
        myDown = "scroll_2";
    }
    if (myDest === "scroll_2"){
        myUp = "scroll_1";
        myDown = "scroll_3";  
    }
    if (myDest === "scroll_3"){
        myUp = "scroll_2";
        myDown = "scroll_3";
    }
}


function SmoothVerticalScrolling(e, time, where) {
    var eTop = e.getBoundingClientRect().top;
    var eAmt = eTop / 100;
    var curTime = 0;
    while (curTime <= time) {
        window.setTimeout(SVS_B, curTime, eAmt, where);
        curTime += time / 100;
    }
}



function SVS_B(eAmt, where) {
    if(where === "center" || where === "")
        window.scrollBy(0, eAmt / 2);
    if (where === "top")
        window.scrollBy(0, eAmt);
}

function myScroll(){
    if (scrollPositionBool === false ){
        scrollPositionBool = true;
        if (scrollPosition>window.pageYOffset){
            scrollDirection = "up";
        }
        else if (scrollPosition===window.pageYOffset){}
        else{
            scrollDirection = "down";
        }
        scrollPosition = window.pageYOffset;
        console.log(scrollPosition);
        window.setTimeout(function(){
            scrollPositionBool = false;

        }, 50);
    }
    if (scrollingBool === false){
        scrollingBool=true;
        getDestination();
        var destination = document.getElementById(destinationID);
        changeDestinations(destination.id);
        console.log(destination);
        window.setTimeout(function(){
            scrollingBool = false;
        }, 500);
        SmoothVerticalScrolling(destination, 375, "top");
    }
}
</script>
