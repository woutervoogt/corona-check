<%- include("partials/header") %>
<%- include("partials/nav-bar") %>

<div class="expertpage_layout">
    <div class="ticket_list">
        <div class="ticket_list_info_space">
            <!-- Hier komt een lijst met de tickets -->
            <div class="ticket_list_info_list_container">
                <% for(var i=0; i<data.length; i++) {%>
                <div class="ticket_list_info_list_item" id="<%= data[i]._id %>">
                    <h4 class="ticket_list_item_channel"><%= data[i].channelTitle%></h4>
                    <h4 class="ticket_list_item_video"><%= data[i].videoTitle%></h4>
                </div>
                <% } %>
            </div>
        </div>
        <div class="ticket_list_button_space">
            <button class="ticket_list_button_left"></button>
            <button class="ticket_list_button_mid"></button>
            <button class="ticket_list_button_right"></button>
        </div>
    </div>
    <div class="scrollspace">
        <div class="ticket_info">
            <div class="ticket_info_info_space">
                <div class="ticket_info_video_details">
                    <!-- Hier komt een frame met de info over de geselecteerde ticket -->
                    <h3 class="ticket_info_channel_title">Channel: <span><%= data[0].channelTitle%></span></h3>
                    <h3 class="ticket_info_video_title">Video: <span><%= data[0].videoTitle%></span></h3>
                    <p class="ticket_info_views">Views: <span><%= data[0].viewCount%></span></p>
                    <p class="ticket_info_description">Video Description: <span>
                            <%= data[0].videoDescription%> </span>
                    </p>
                </div>
                
                <div class="ticket_info_score ticket_info_hidden">
                    <div class="input_box">
                        <input id="first_radio" type="radio" name="trustscore" value="trusted">
                        <label for="first_radio">Trusted source</label>
                    </div>
                    <div class="input_box">
                        <input id="second_radio" type="radio" name="trustscore" value="suspicious">
                        <label for="second_radio">Suspicious source</label>
                    </div>
                    <div class="input_box">
                        <input id="hidden_input" type="hidden" name="dbID" value="">
                    </div>
                </div>
                <div class="ticket_info_score_explanation ticket_info_hidden">
                    <div class="input_box">
                        <textarea id="first_textarea" name="score_explanation">

                        </textarea>
                    </div>
                    
                </div>
            </div>
            <div class="ticket_info_button_space">
                <!-- Hier komen een aantal buttons (met bijvoorbeeld links naar de video) -->
                <a href="https://www.youtube.com/watch?v=<%= data[0].videoId%>"><button>Go to video</button></a>
                <button onclick="infoSpaceContent.videoDetails()">Show more info</button>
                <button onclick="infoSpaceContent.score()">Give score</button>
                <button onclick="infoSpaceContent.explanation()">Explain score</button>
            </div>
        </div>
        <div class="ticket_send_options">
            <div class="ticket_send_info_space">
                    <div class="input_box">
                        <input id="first_checkbox" type="checkbox" name="" value="">
                        <label for="first_checkbox">Hier komt optie 1</label>
                    </div>
                    <div class="input_box">
                        <input id="second_checkbox" type="checkbox" name="" value="">
                        <label for="second_checkbox">Hier komt optie 2</label>
                    </div>
            </div>
            <div class="ticket_send_button_space">
                <button type="submit" form="reviewForm">Send</button>
            </div>
        </div>
    </div>
</div>
